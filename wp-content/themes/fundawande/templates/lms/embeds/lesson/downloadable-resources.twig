<div id="downloadable-resources" class="container p-md-4 p-3">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center text-bold m-0">
                        {{attribute(options, lang.prefix~'additional_resources_title')}}
                    </h3>
                </div>
                <div class="card-body">
                    {% for content in lesson_post.get_field('additional_resources') %}
                        {% if content.acf_fc_layout == 'pdf' %}
                            {% include "lms/embeds/content/pdf-resource.twig" %}
                        {% endif %}
                        {% if content.acf_fc_layout == 'video' %}
                            {% include "lms/embeds/content/video-resource.twig" %}
                        {% endif %}
                        {% if content.acf_fc_layout == 'audio' %}
                            {% include "lms/embeds/content/audio-resource.twig" %}
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>