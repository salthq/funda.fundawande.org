<!-- Expanded Sidebar Progress Component -->
<div id="content_{{content_id}}_{{ carousel_id }}" class="lesson-carousel  carousel slide" data-ride="carousel" data-interval="false">

    <!-- Previous Nav Button -->
    <a class="lesson-carousel-control lesson-carousel-control-prev" data-slide="prev" href="#content_{{content_id}}_{{ carousel_id }}" role="button">
        <div class="lesson-carousel-control-icon">
            <span class="module-svg-icon-fill-{{module_number}}" aria-hidden="true">
                {{source('/assets/carousel_prev.svg')}}</span>
            <span class="sr-only">Previous</span>
        </div>
    </a>
    
    <!-- Navigation indicators-->
    <ol class="carousel-indicators">
        {% for item in content.carousel_items %}
            <li data-target="#content_{{content_id}}_{{ carousel_id }}" data-slide-to="{{ loop.index - 1 }}" class="d-none {% if loop.length < 7 %} d-sm-block {% endif %} module-bg-{{ module_number }} {% if loop.index == 1 %} active{% endif %}">
                {{loop.index}}</li>            
        {% endfor %}
    </ol>

    <!-- Next Nav Button -->
    <a class="lesson-carousel-control lesson-carousel-control-next" data-slide="next" href="#content_{{content_id}}_{{ carousel_id }}" role="button">
        <div class="lesson-carousel-control-icon">
            <span class="module-svg-icon-fill-{{module_number}}" aria-hidden="true">
                {{source('/assets/carousel_next.svg')}}</span>
            <span class="sr-only">Next</span>
        </div>
    </a>

    <!-- Carousel Content -->
    <div class="" role="listbox">
            {% for item in content.carousel_items %}
                <div class="carousel-item  {% if loop.index == 1 %}active{% endif %}" data-touch="true"> <div class="lesson-image-wrapper row justify-content-center">
                    <div class = "{% if loop.length < 7 %} d-sm-none {% endif %} lesson-carousel-counter">
                        <p class="text-center m-0">{{loop.index}} of {{loop.length}}</p>
                    </div>
                    <div class="lesson-carousel-image col fw-media mt-5">
                        <div class="img-container">
                            <img class="d-block" src ="{{ item.image }}">
                            <a class="img-download-icon" href="{{item.image}}" download>
                                <span class="module-svg-fill-{{sub_unit_meta.module_number}}">
                                    {{source('assets/download_icon.svg')}}
                                </span>
                            </a>
                        </div>
                    </div>   

                    <!-- Carousel Text -->
                    <div class="col-12">
                        <div class="container lesson-carousel-text text-center">
                            <h5 class="text-center mt-3">
                                {{ item.title }}
                            </h5>
                            <div class="text-center m-2">
                                {{ item.text }}
                            </div>
                        </div>
                    </div>

                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
