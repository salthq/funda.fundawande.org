
{# Twig block to be included in template-home.twig #}
{% block content %}


    <form id="profile-form"  method="post" role="form" class="public-profile profile-form">
        <div class="profile-block py-4">
            
            <div class="row justify-content-between py-2">
                <div class="form-group col-md-6">
                    <label class="input-label">{{post.get_field(lang.prefix~'first_name_label')}}</label>
                    <input type="text" class="form-control  " name="first_name" id="first_name" placeholder="{{post.get_field(lang.prefix~'first_name_label')}}" required value="{{ user.first_name }}">
                </div>
                <div class="form-group col-md-6">
                    <label class="input-label">{{post.get_field(lang.prefix~'last_name_label')}}</label>
                    <input type="text" class="form-control " name="last_name" id="last_name" placeholder="{{post.get_field(lang.prefix~'last_name_label')}}" value="{{ user.last_name }}" required>
                </div>
            </div>
            <div class="row justify-content-between py-2">
                <div class="form-group col-md-6">
                    <label class="input-label">{{post.get_field(lang.prefix~'email_label')}}</label>
                    <input type="email" class="form-control " name="user_email" id="user_email" placeholder="{{post.get_field(lang.prefix~'email_label')}}" data-error="Sorry, that isn't an email address" value="{{ user.user_email }}">
                </div>
                <div class="form-group col-md-6">
                    <label class="input-label">{{post.get_field(lang.prefix~'contact_number_label')}}</label>
                    <input type="tel" class="form-control " name="phone_number" id="phone_number"  placeholder="e.g. +27 83 1234 567" value="{{ user.phone_number }}" >
                </div>
            </div>
            <div class="row justify-content-between py-2">
                <div class="form-group col-md-6">
                    <label class="input-label">{{post.get_field(lang.prefix~'id_number_label')}}</label>
                    <input type="text" class="form-control " name="user_identity_no" id="user_identity_no" placeholder="{{post.get_field(lang.prefix~'id_number_label')}}"  value="{{ user.user_identity_no }}" >
                </div>
                <div class="form-group col-md-6">
                    <label class="input-label">{{post.get_field(lang.prefix~'school_label')}}</label>
                    <input type="text" class="form-control" name="school_organisation" id="school_organisation"  placeholder="{{post.get_field(lang.prefix~'school_placeholder')}}" value="{{ user.school_organisation }}"  >
                </div>
            </div>
            <div class="row justify-content-between py-2">
                <div class="form-group col-12">
                    <label class="input-label">{{post.get_field(lang.prefix~'description_label')}}</label>
                    <textarea rows="2" type="text" class="form-control" name="user_description" id="user_description" placeholder="{{post.get_field(lang.prefix~'description_placeholder')}}">{{ user.user_description }}</textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-12 my-4">
                    <input type="hidden" name="task" value="profile_submit" />
                    <input type="hidden" name="user_id" value="{{user.ID}}" />
                    <input type="submit" class="mr-4 btn btn-lg primary-btn-fill rounded" value="{{post.get_field(lang.prefix~'update_button_label')}}">
                </div>
            </div>

        </div>
    </form>

{% endblock %}
