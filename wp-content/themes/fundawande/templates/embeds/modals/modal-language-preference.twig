<!-- Language Preference Modal -->
{% set modal_id = "language-preference" %}
{% embed "embeds/modals/modal-global.twig" %}
  {# Add language preference header to modal #}
  {% block modal_header %}
    {% if user.language_preference %}
      <h5 class="modal-title text-center text-tertiary pl-3"><strong>{{attribute(options, lang.prefix~'chosen_language_text')}}</strong></h5>
    {% else %}
      <h5 class="modal-title text-center text-tertiary pl-3"><strong>{{attribute(options,'language_preference_title')}}</strong></h5>
    {% endif %}
  {% endblock %}
  {# Remove the close button #}
  {% block modal_close %}

  {% endblock %}

  {# Add language preference body content to modal #}
  {% block modal_body %}
      <form class = "fw-form" method = "GET">
        <div class = "form-group text-center">
          <div class="btn-group" role="group" aria-label="Change Language buttons">
            <button class = "btn button-tertiary {% if lang.id == 'eng'%} active-button {% endif %}" type = "submit" name = "lang" value ="eng">English</button>
            <button class = "btn button-tertiary {% if lang.id == 'xho'%} active-button {% endif %}" type = "submit" name = "lang" value ="xho">Xhosa</button>
          </div>
        </div>
      </form>
      {% if user.language_preference %}
        <p>{{attribute(options, lang.prefix~'chosen_language_explanation')}}</p>
      {% endif %}
  {% endblock %}

  {% block modal_footer %}
    {% if user.language_preference %}
      <button id = "set-language-preference" class = "btn btn-lg primary-btn-fill" >
        {{attribute(options, lang.prefix~'continue_button_text')}}
        <span class = "p-2">{{source ('/assets/arrow_right.svg')}}</span>
      </button>
    {% endif %}  
  {% endblock %}
{% endembed %}
