<!-- Expanded Sidebar Progress Component -->
<div id = "main-menu-modal" class="main-menu-modal modal " tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content  p-4">
            <div id="main-menu" class = " d-flex justify-content-left flex-column">
                <a class="d-flex align-items-center py-2 pr-3" href="{{course_link}}" >
                    {{ source('assets/menu/dash_menu_icon.svg') }}
                    <span>{{attribute(options, lang.prefix~'go_to_modules_link')}}</span>
                </a>
                <a class="d-flex align-items-center py-2 pr-3" href="{{current_lesson_link}}" >
                    {{ source('assets/menu/modules_menu_icon.svg') }}
                    <span>{{attribute(options, lang.prefix~'continue_learning_link')}}</span>
                </a>
                {# <a class="d-flex align-items-center py-2 pr-3" href="#" >
                    {{ source('assets/menu/contact_menu_icon.svg') }}
                    <span>{{attribute(options, lang.prefix~'view_contacts_link')}}</span>
                </a>
                <a class="d-flex align-items-center py-2 pr-3" href="#" >
                    {{ source('assets/menu/messages_menu_icon.svg') }}
                    <span>{{attribute(options, lang.prefix~'view_messages_link')}}</span>
                </a> #}
                 {% if current_user.wp_user_level >= 7 %}
                    <a class="d-flex align-items-center py-2 pr-3" href="{{ fn('get_the_permalink','586') }}?course_id=586" >
                        {{ source('assets/menu/dash_menu_icon.svg') }}
                        <span>Change to Reading for Meaning course</span>
                    </a>
                    <a class="d-flex align-items-center py-2 pr-3" href="{{ fn('get_the_permalink','1421') }}?course_id=1421" >
                        {{ source('assets/menu/dash_menu_icon.svg') }}
                        <span>Change to Rhodes course</span>
                    </a>
                    <a class="d-flex align-items-center py-2 pr-3" href="{{ fn('get_the_permalink','3272') }}?course_id=3272" >
                        {{ source('assets/menu/dash_menu_icon.svg') }}
                        <span>Change to isiXhosa Teaching Reading Core Course</span>
                    </a>
                {% endif %}
                 {% if is_coach %}
                    <a class="d-flex align-items-center py-2 pr-3" href="/coach-dashboard" >
                        {{ source('assets/menu/messages_menu_icon.svg') }}
                        <span>Go to Coach Dashboard</span>
                    </a>
                 {% endif %}
          
                <a class="d-flex align-items-center py-2 pr-3" href="{{function('wp_logout_url', '/login')}}" >
                    {{ source('assets/menu/logout_menu_icon.svg') }}
                    <span>{{attribute(options, lang.prefix~'logout_link')}}</span>
                </a>
            </div>
        </div>
    </div>
</div>